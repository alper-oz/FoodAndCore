
@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/web2/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <script src="/web2/js/jquery.min.js"></script>
    <link rel="stylesheet" href="/web2/css/font-awesome.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel='stylesheet' type='text/css'>
    <link href="/web2/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="/web2/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script src="/web2/js/main.js"></script> <!-- Resource jQuery -->
    <script src="/web2/js/Chart1.js"></script>
    <!-- //chart -->
</head>
<body>
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color: #FFC312">
                <div class="icon-text">
                    <h3>@ViewBag.totalfood</h3>
                    <p>Total Food</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users" style="background-color: #F79F1F">

                <div class="icon-text">
                    <h3>@ViewBag.totallegumes</h3>
                    <p>Legumes Count</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color: #12CBC4">

                <div class="icon-text">
                    <h3>@ViewBag.totalfoodnumber</h3>
                    <p>Fruit Count</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color: #FDA7DF">

                <div class="icon-text">
                    <h3>@ViewBag.totalvegetablenumber</h3>
                    <p>Vegetable Count</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="clearfix"></div>
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color: #ED4C67">
                <div class="icon-text">
                    <h3>@ViewBag.totalfoodstocks</h3>
                    <p>Sum Food</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="sales" style="background-color: #D980FA">
                <div class="icon-text">
                    <h3>@ViewBag.foodpriceavg ₺</h3>
                    <p>Food Price Avg</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color: #A3CB38">

                <div class="icon-text">
                    <h3>@ViewBag.totalstockfood</h3>
                    <p>Max Stock Food</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors" style="background-color: #1289A7">

                <div class="icon-text">
                    <h3>@ViewBag.minstockfood</h3>
                    <p>Min Stock Food</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>


